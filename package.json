    "promise": "^7.1.1",
    "query-string": "^4.3.2",
    "sequelize": "^5.21.2"
  },
  "devDependencies": {
    "babel-plugin-transform-define": "^1.2.0",
    "babel-plugin-transform-node-env-inline": "^0.2.0",
    "babel-preset-node": "^5.1.1",
    "babel-preset-stage-3": "^6.22.0",
    "bluebird": "^3.5.0",
    "chokidar": "^1.6.1",
    "fs-readdir-recursive": "^1.0.0",
    "moment": "^2.18.1",
    "nodemon": "^1.11.0",
    "output-file-sync": "^2.0.0",
    "slash": "^1.0.0"
  },
  "scripts": {
    "validateConfig": "node tools/validateConfig.js",
    "build": "./node_modules/.bin/babel-node tools/build.js",
    "build:prod": "NODE_ENV=production ./node_modules/.bin/babel-node tools/build.js",
    "server": "node build/app.js",
    "start": "./node_modules/.bin/nodemon --watch build --watch config build/app.js",
    "migration": "node ./node_modules/.bin/p2migration up -c p2m-message-server/database -m src/db/migrations -s src/db/seeders",
    "migration:down": "node ./node_modules/.bin/p2migration down -c p2m-message-server/database -m src/db/migrations -s src/db/seeders"
  },
  "bin": {
    "p2message": "./app.js",
    "p2message_init": "./init.sh"
  }
}
