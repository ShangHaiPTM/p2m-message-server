  "dependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-runtime": "^6.23.0",
    "body-parser": "^1.17.1",
    "co": "^4.6.0",
    "co-express": "^2.0.0",
    "compression": "^1.6.2",
    "config": "^1.25.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.15.2",
    "js-yaml": "^3.8.2",
    "lodash": "^4.17.4",
    "morgan": "^1.9.1",
    "mysql": "^2.17.1",
    "mysql2": "^2.2.5",
    "p2m-common-logger": "^1.0.0",
    "p2m-message-channel-jpush": "^2.0.0",
    "p2m-message-channel-socket-io": "^2.0.1",
